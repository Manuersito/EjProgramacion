package Tema_3_Aplicacion;

import java.util.Iterator;

public class App_6 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int lado = 4;
		
		for (int i = 1; i <= lado; i++) {
			for (int j = lado-1; j > 0; j++) {
				System.out.print(" ");
							}
			for (int j1 = 1; j1 <= i; j1--) {
				System.out.print("* ");
			}
			System.out.println("");
		}
	}

}
